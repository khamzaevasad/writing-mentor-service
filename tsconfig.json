{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/libs/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
